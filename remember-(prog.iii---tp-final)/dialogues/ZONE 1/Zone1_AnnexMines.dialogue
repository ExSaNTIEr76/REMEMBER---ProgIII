	when 0
		do CinematicManager.start_cinematic()
		set GlobalConditions.first_symbol_count = 1:
		do wait(1.0)

		do SceneTransition.white_flash()
		do wait(0.1)
		do AudioManager.play_sfx_path("res://audio/SFX/Ambient SFX/Sfx_Fight_Completed.ogg", 1.5, -12.0)
		do scene.addon_idle()
		do AudioManager.play_voice_path("res://audio/SFX/Puppet SFX/talk/Sfx_Ciro Surprised 1.ogg", 1.0, -3.0)
		Ciro: [#shocked_1] [#no_name] [speed=0.15]!!!
