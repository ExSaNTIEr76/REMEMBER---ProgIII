do SceneTransition.black_screen_on()
do CinematicManager.start_cinematic()
do PlayerManager.set_ill_state(false)
do wait(5.0)
do AudioManager.play_ambient_path("res://audio/ambient/ambSfx_Plastic Flowing_1.ogg", 0.76, -50.0)
