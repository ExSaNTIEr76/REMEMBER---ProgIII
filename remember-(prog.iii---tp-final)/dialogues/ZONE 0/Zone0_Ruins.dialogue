do AudioManager.play_ambient_path("res://audio/ambient/ambSfx_Plastic Flowing_1.ogg", 0.76, -18.0)
do wait(2.0)
do SceneTransition.fade_in_black()
do wait(5.0)
do SceneTransition.fade_out_black()
